# Variáveis de Ambiente para Produção - 4Studio Backend
# Copie este arquivo e preencha com seus valores reais

# Django Settings
DJANGO_SETTINGS_MODULE=4studio.settings_prod
SECRET_KEY=gere-uma-chave-secreta-aqui-use-python-get-random-secret-key
DEBUG=False

# Hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=seu-app.railway.app,api.4studio.com.br,seu-dominio.com

# URL do Frontend (para CORS)
FRONTEND_URL=https://seu-frontend.vercel.app

# Database (fornecido automaticamente pelo Railway/Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# Email (Gmail App Password recomendado)
EMAIL_HOST_USER=seu-email@gmail.com
EMAIL_HOST_PASSWORD=sua-senha-de-app
DEFAULT_FROM_EMAIL=seu-email@gmail.com
ADMIN_EMAIL=admin@4studio.com.br

