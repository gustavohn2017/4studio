# ===================================
# 4STUDIO BACKEND - ENVIRONMENT VARIABLES
# ===================================
# Copie este arquivo para .env e configure com seus valores

# ====================
# DJANGO SETTINGS
# ====================
SECRET_KEY=your-secret-key-here-change-in-production-use-django-secret-key-generator
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,.railway.app,.up.railway.app

# ====================
# DATABASE (Railway PostgreSQL)
# ====================
# Railway provides this automatically - just add your Railway DATABASE_URL here
DATABASE_URL=postgresql://user:password@host:5432/database

# Alternative manual configuration (if not using DATABASE_URL)
DB_NAME=4studio_db
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_HOST=localhost
DB_PORT=5432

# ====================
# CORS & CSRF (Frontend URLs)
# ====================
# Add your Vercel frontend URL here after deployment
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-app.vercel.app,https://www.your-domain.com
CSRF_TRUSTED_ORIGINS=http://localhost:3000,https://your-app.vercel.app,https://www.your-domain.com

# ====================
# EMAIL CONFIGURATION
# ====================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password
ADMIN_EMAIL=admin@4studio.com.br

# ====================
# RAILWAY AUTO-PROVIDED
# ====================
# These are automatically set by Railway, no need to configure:
# PORT=8000
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=xxx
# RAILWAY_SERVICE_ID=xxx

# ====================
# SECURITY (Production)
# ====================
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# ====================
# STATIC & MEDIA FILES
# ====================
STATIC_URL=/static/
MEDIA_URL=/media/
